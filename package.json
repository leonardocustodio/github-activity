{
  "name": "@leonardocustodio/github-activity",
  "description": "Fetch all your GitHub PRs, issues, and reviews across repositories",
  "version": "1.0.0",
  "author": "Leonardo Custodio <leonardo@custodio.me>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "data/DATA_SCHEMA.sql",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/leonardocustodio/github-activity"
  },
  "keywords": [
    "github",
    "activity",
    "tracker",
    "pull-requests",
    "issues",
    "reviews",
    "cli"
  ],
  "bin": {
    "github-activity": "./dist/cli.js"
  },
  "scripts": {
    "prepublishOnly": "npm run typecheck && npm run build",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\" \"tests/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\" \"tests/**/*.{ts,js}\""
  },
  "dependencies": {
    "@octokit/auth-token": "^6.0.0",
    "@octokit/rest": "^22.0.1",
    "better-sqlite3": "^12.5.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-plugin-jest": "^29.2.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-sonar-reporter": "^2.0.0",
    "jest-watch-typeahead": "^3.0.1",
    "lint-staged": "^16.2.7",
    "nock": "^14.0.10",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "jestSonar": {
    "reportPath": "tests",
    "reportFile": "test-report.xml"
  }
}
